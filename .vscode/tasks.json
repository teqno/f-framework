{
  "tasks": [
    {
      "type": "shell",
      "label": "cmake",
      "command": "cmake",
      "args": ["-B", "build/", "-S", "."],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "make",
      "command": "make",
      "args": ["-C", "build/"],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["cmake"]
    }
  ],
  "version": "2.0.0"
}
