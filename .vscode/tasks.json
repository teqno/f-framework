    //   "args": ["-C", "build/"],
    //   "problemMatcher": ["$gcc"],
    //   "group": "build",
    //   "dependsOn": ["make"]
    // },
    {
      "type": "shell",
      "label": "Build and Test",
      "command": "make test",
      "args": ["-C", "build/"],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["make"]
    },
  ],
  "version": "2.0.0"
}
