{
  "tasks": [
    {
      "type": "shell",
      "label": "cmake",
      "command": "cmake",
      "args": ["-G", "MinGW Makefiles", "-B", "build/", "-S", "."],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "make",
      "command": "make",
      "args": ["-C", "build/"],
      "problemMatcher": ["$gcc"],
      "group": "build",
      "dependsOn": ["cmake"]
    },
